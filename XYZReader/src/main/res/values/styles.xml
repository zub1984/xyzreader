<resources>
    <style name="AppTheme" parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryDark">@color/theme_primary_dark</item>
        <item name="colorAccent">@color/theme_accent</item>
        <item name="toolbarStyle">@style/Toolbar</item>
    </style>

    <style name="AppTheme.Home" parent="AppTheme">
    </style>

    <style name="AppTheme.Detail" parent="AppTheme">
    </style>

    <style name="Toolbar" parent="Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="popupTheme">@style/Theme.AppCompat.Light</item>
    </style>

    <!-- text styles for list item  -->
    <style name="list_item_text_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!-- text style for article details  -->
    <style name="article_title_head_line_style">
        <item name="android:fontFamily">sans-serif-condensed</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/detail_title_text_size</item>
    </style>

    <style name="detail_article_body_text_style">
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textColor">@color/colorPrimaryText</item>
        <item name="android:textSize">@dimen/detail_body_text_size</item>
        <item name="android:textColorLink">@color/theme_accent</item>
    </style>

    <style name="collapsing_toolbar_layout_text_style">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


</resources>
